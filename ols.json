{
    "$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
    "enable_fake_methods": true,
    "enable_semantic_tokens": true,
    "enable_document_symbols": true,
    "enable_format": true,
    "enable_procedure_context": true,
    "enable_hover": true,
    "enable_snippets": false,
    "enable_inlay_hints": true,
    "enable_procedure_snippet": false,
    "disable_parser_errors": false,
    "profile": "default",
    "profiles": [
        { "name": "default", "checker_path": ["src"]},
        { "name": "linux_profile", "os": "linux", "checker_path": ["src/main.odin"]},
        { "name": "windows_profile", "os": "windows", "checker_path": ["src"]}
    ]
}
